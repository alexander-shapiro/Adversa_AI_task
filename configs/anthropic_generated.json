{
  "name": "Anthropic API",
  "provider": "anthropic",
  "version": "1.0",
  "base_url": "https://api.anthropic.com/v1",
  "auth": {
    "type": "header",
    "key_name": "x-api-key",
    "value_template": "{credential}"
  },
  "request": {
    "endpoint": "/messages",
    "method": "POST",
    "prompt_field": "messages",
    "static_fields": {
      "messages": [
        {
          "role": "user",
          "content": "{prompt}"
        }
      ],
      "model": "claude-3-haiku-20240307",
      "max_tokens": 1024
    },
    "content_type": "application/json",
    "extra_headers": {
      "anthropic-version": "2023-06-01"
    }
  },
  "response": {
    "response_field": "content.0.text",
    "error_field": "error.message"
  },
  "streaming": false,
  "timeout_seconds": 30
}